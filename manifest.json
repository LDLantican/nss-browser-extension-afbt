{
  "manifest_version": 3,
  "name": "NSS Appfolio-To-Buildertrend Helper",
  "version": "1.0.0",
  "description": "Import Appfolio Work Orders to Buildertrend efficiently.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": ["storage", "tabs"],
  "action": {
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.appfolio.com/maintenance/service_requests/work_orders*"
      ],
      "js": ["work_orders.js"],
      "css": ["work_orders.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://*.appfolio.com/maintenance/service_requests/*/work_orders/*"
      ],
      "js": ["work_order.js"],
      "css": ["work_order.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://buildertrend.net/app/JobPage/0/*"],
      "js": ["add_job.js"],
      "css": ["add_job.css"],
      "run_at": "document_idle"
    }
  ]
}
